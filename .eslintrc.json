{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint-config-airbnb"
  ],
  "plugins": [
    "import",
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "consistent-return": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  }
}